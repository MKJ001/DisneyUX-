{
  "manifest_version": 3,
  "name": "DisneyUX+",
  "description": "Improves DinseyPlus UX by ensuring the space key only toggles between play and pause for video playback.",
  "version": "1.0.1",
  "icons": {
    "16": "logo/disneyPlusUX_16.png",
    "32": "logo/disneyPlusUX_32.png",
    "48": "logo/disneyPlusUX_48.png",
    "128": "logo/disneyPlusUX_128.png"
  },
  "host_permissions": [
    "https://*.disneyplus.com/*"
  ],
  "permissions": [
    "webNavigation",
    "scripting"
  ],
  "background": {
    "service_worker": "main.js"
  }
}